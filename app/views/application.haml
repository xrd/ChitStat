!!!
%html
  %head
    %title
      Toggle-able Border Layout example
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %link{ :href => "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css", :rel => "stylesheet", :type => "text/css" }
    %link{ :href => "css/contentflow.css", :rel => "stylesheet", :type => "text/css" }
    %script{ :src => "http://www.google.com/jsapi" }
    %script
      \// Load jQuery
      google.load("jquery", "1.4");
      google.load("jqueryui", "1.8");
      
      \// on page load complete, fire off a jQuery json-p query
      \// against Google web search
      google.setOnLoadCallback(function() {
      loadLayout();
      loadAutocomplete();
      } );
    %script{ :src => "../lib/jquery.metadata.js", :type => "text/javascript" }
    %script{ :src => "../lib/jquery.sizes.js", :type => "text/javascript" }
    %script{ :src => "../lib/jlayout.border.js", :type => "text/javascript" }
    %script{ :src => "../lib/jquery.jlayout.js", :type => "text/javascript" }
    %script{ :src => "../lib/contentflow.js", :type => "text/javascript" }
    %script{ :src => "../lib/rtf.js", :type => "text/javascript" }
    %script
      loadContentFlow();
    %style
      html, body {
      width: 100%;
      height: 100%;
      padding: 0;
      margin: 0;
      overflow: hidden;
      }
      
      \.layout {
      height: 100%;
      }
      
      \.center {
      z-index: 100;
      }
      
      \.center, .east, .west, .north, .south {
      background-color: rgb(220,220,220);
      border: 1px solid rgb(200,200,200);
      text-align: center;
      display: inline-block;
      }
      
      \.west {
      width: 200px;;
      }
      
      \.south {
      height: 150px;
      }
      
      \.north {
      height: 220px;
      }
  %body
    .layout.{layout:.{type:.'border',.hgap:.3,.vgap:.3}}
      .center
        Center
        %button#toggle-north
          Toggle North
        %button#toggle-south
          Toggle South
      .north
        #rendered.ContentFlow{ :style => "height: 200px" }
          /
            should be place before flow so that contained images will be loaded first
          .loadIndicator
            .indicator
          .flow
            .item
              %img.content{ :src => "images/1.png" }
              .caption
                Dancing in the Rain
            .item
              %img.content{ :src => "images/2.png" }
              .caption
                Dancing in the Rain
            .item
              %img.content{ :src => "images/3.png" }
              .caption
                Dancing in the Rain
            .item
              %img.content{ :src => "images/4.png" }
              .caption
                Dancing in the Rain
      .south
        Enter chat:
        %input{ :type => "text" }
      .west
        Participants
